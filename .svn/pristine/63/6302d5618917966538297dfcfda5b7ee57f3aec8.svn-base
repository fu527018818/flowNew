<template>
     <div class="manageTable">
        <div class="tableBox" v-if="lists" v-loading="loading"
                                element-loading-text="拼命加载中"
                                element-loading-background="rgba(255,255,255,0.5)">
            <el-table
            :data="lists"
            border
            style="width: 100%"
            ref = "userTable"
            max-height="700"
            :header-row-class-name="tableHeade"
            :default-sort = "{prop:'date', order: 'descending'}"
            >
            <el-table-column
                prop="name"
                label="姓名"
                 >
             </el-table-column>
                 <el-table-column
                prop="real_name"
                label="职务"
                >
              </el-table-column>
              <el-table-column
                prop="gender"
                label="性别"
                :formatter="formatGender"
                >
              </el-table-column>
              <el-table-column
                prop="phone"
                label="手机号"
                >
              </el-table-column>
                <el-table-column
                prop="shop_name"
                label="所属组织"
                 sortable
                >
              </el-table-column>
              <el-table-column
                  label="登录设置"
                >
                <template slot-scope="scope">
                    <el-button
                        size="mini"
                        :type="scope.row.status=='1'? 'danger':'primary'"
                        @click="handleEdit(scope.$index, scope.row)">
                        {{scope.row.status=='1'?'禁止登录':'恢复登录'}}
                    </el-button>
                </template>
              </el-table-column>
            </el-table>
        </div>
    </div>
</template>

<script>
    import {personnelModifyLogin} from '../../api/global';
    export default {
        name:"adminTable", //职员管理Table
        props:['lists'],
        data(){
            return{
                loading:false
            }
        },
        methods:{
             tableHeade(){
          return 'headerTr'
         },
         formatGender(row,column){
             return row.gender=='1'?'男':'女';
         },
         handleEdit(index,row){
            
             personnelModifyLogin({
                 allow:row.status =="1"?"0":"1",
                 user_id:row.id
             }).then(res=>{
                // 修改状态成功后重新调用父组件初始化
               if(res.status =="200"){
                  this.$emit('changeStatus');
               }
             })
         }
        }
    }
</script>

<style scoped lang="scss">
     .manageTable{
        width: 100%;
        height: 800px;
        background-color: #ffffff;
        margin-top: 6px;
        & > .tableBox{
            padding: 30px;
        }
    }
</style>