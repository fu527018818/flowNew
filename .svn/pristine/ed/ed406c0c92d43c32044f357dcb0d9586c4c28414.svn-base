<template>
    <div class="app">
         <main-nav :indexMenu="'/notice/ceshi'"></main-nav>
         <div class="contentBox"  v-slim-scroll>
            <div class="contentBox_child">
                <div class="content">
                    <div class="notceBox">
                        <div class="manageTable">
                                <div class="tableBox" 
                                    v-loading="loading"
                                    element-loading-text="拼命加载中"
                                    element-loading-background="rgba(255,255,255,0.5)">
                                <div class="searchIphone">
                                    <div class="searchList">
                                        <el-input v-model="searchIphone" placeholder="请输入手机号码"></el-input>
                                    </div>
                                     
                                     <el-button type="danger" @click="searchNo">搜索</el-button>
                                </div>
                                <el-table
                                :data="lists"
                                border
                                style="width: 100%"
                                ref = "userTable"
                                height="500"
                                :header-row-class-name="tableHeade"
                                :default-sort = "{prop:'date', order: 'descending'}"
                                >
                                <el-table-column
                                    prop="id"
                                    label="ID"
                                    sortable
                                    >
                                </el-table-column>
                                 <el-table-column
                                    prop="phone"
                                    label="手机号"
                                    >
                                </el-table-column>
                                    <el-table-column
                                    prop="contents"
                                    label="发送内容"
                                    >
                                </el-table-column>
                                <el-table-column
                                    prop="return_data"
                                    label="返回信息"
                                 
                                    >
                                </el-table-column>
                               
                                    <el-table-column
                                    prop="status"
                                    label="状态"
                                    :formatter="formatGender"
                                    >
                                </el-table-column>
                                
                                </el-table>
                                <div class="block pageBottom">
                                    <span class="demonstration"></span>
                                    <el-pagination
                                    @size-change="handleSizeChange"
                                    @current-change="handleCurrentChange"
                                    :current-page="page"
                                    :page-sizes="[10, 20, 30, 40,50]"
                                    :page-size="10"
                                    layout="total, sizes, prev, pager, next, jumper"
                                    :total="total">
                                    </el-pagination>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</template>

<script>
    import mainNav from '../../components/MainNav';
    import {getNoteCeshi} from '../../api/global';
    export default {
        name:"globalSearchUser", //全局搜索
        components:{mainNav},
        data(){
            return{
                page:1,
                limit:10,
                lists:[],
                loading:false,
                searchIphone:"",
                total:null
            }
        },
        methods:{
            ceshiInit(){
                this.loading = true;
                getNoteCeshi({
                    page:this.page,
                    limit:this.limit,
                    phone:this.searchIphone
                }).then(res=>{
                    if(res.data.status=="200"){
                        this.lists = res.data.data.list
                        this.total = res.data.data.totle*1
                        setTimeout(()=>{
                            this.loading=false;
                        },500)
                }
                })
                .catch(err=>{
                    console.log(err)
                })
            },
             tableHeade(){
            return 'headerTr'
            },
            formatGender(row,column){
                return row.status=='1'?'成功':'失败';
            },
            searchNo(){
                 this.ceshiInit()
            },
            handleSizeChange(val){
                this.limit = val
                this.ceshiInit()
            },
            handleCurrentChange(val){
                this.page = val
                this.ceshiInit();
            }
        },
        created(){
            this.ceshiInit()
        }
    }
</script>

<style scoped lang="scss">
    .notceBox{
        width:100%;
        background: #ffffff;
    }
     .manageTable{
        width: 100%;
        height: 800px;
        background-color: #ffffff;
        margin-top: 6px;
        & > .tableBox{
            padding: 30px;
        }
    }
    .searchIphone{
        height: 77px;
        line-height: 77px;
        text-align: center;
        & .searchList{
            width: 200px;
            display: inline-block;
        }
    }
    .pageBottom{
       margin:30px 50px;
       text-align: right; 
    }
</style>