.main{
    position: relative;
    width: 100%;
    min-height: 100%;
    margin-bottom: -20px;
}
.headline{
    width: 355px;
    height: auto;
    margin: 0 auto;
    text-align: center;
    padding-top:5%;
}
.headline > .pwdHint{
    color: #6d6d6d;
    font-size: 16px;
    margin-top: 1%;
    margin-bottom: 9%;
}
.headline > .pwdTit{
	height: 37px;
	font-size: 40px;
	line-height: 26px;
	letter-spacing: 2px;
    color: #4c4c4c;
  
}
.loginBox{
    width: 500px;
    height: auto;
    margin: 0 auto;
    text-align: center;
    border:1px solid #cecece;
    background-color: #fff;
    box-shadow:0 0 50px #ccc;
}
.loginBox .userHead >img{
    width: 150px;
    height: 150px;
    margin: 100px 0 46px;
    border-radius: 50%;
}
.userIpt{
    width: 300px;
    height: 40px;
    line-height: 40px;
    margin: 0 auto;
    position: relative;
    background-color: #ffffff;
}
.userIpt > input{
    box-sizing: border-box;
    width: 100%;
    height: 40px;
    line-height: 40px;
    outline: 0;
    border: 1px solid #cccccc;
    display: block;
    appearance: none;
    box-shadow: 0 0 0px 1000px #ffffff inset;
    appearance: none;
    padding: 3px 10px;
	font-size: 14px;
	font-weight: normal;
	font-style: normal;
	font-stretch: normal;
	line-height: 26px;
	letter-spacing: 0.8px;
	color: #4c4c4c;
}
.error_tit{
    width:300px;
    margin: 0 auto;
    text-align: left;
	font-size: 14px;
	letter-spacing: 0.7px;
    color: #ff6648;
    padding-left: 25px;
    position: relative;
    box-sizing: border-box;
}
.errorMeassge{
    display:inline-block;

}
.error_tit > img{
    position: absolute;
    left:0;
    top: 50%;
    transform:translate(0,-50%);
    cursor:pointer;
    z-index: 10;
    padding: 5px;
}
.loginBtn span{
	font-size: 14px;
	font-weight: normal;
	font-style: normal;
	font-stretch: normal;
	line-height: 26px;
	letter-spacing: 0.8px;
	color: #ffffff;
}
.copyright{
    text-align: center;
    position: absolute;
    bottom: 0;
    width: 100%;
    margin-bottom:5px;
    font-size: 14px;
	font-weight: normal;
	font-style: normal;
	font-stretch: normal;
	letter-spacing: 0.8px;
	color: #6d6d6d;
}
.copyright > a{
    font-size: 14px;
	font-weight: normal;
	font-style: normal;
	font-stretch: normal;
	letter-spacing: 0.8px;
	color: #6d6d6d;
}
#loginBtn{
    width: 300px;
    background-color: #4198ff;
    margin: 0 auto 100px;
    border:1px solid #4198ff;
}
/**
*logo_id and logo_pwd end
**/
/**
*logo_pwd start
**/
.callback{
    text-align: left;
    margin-top: 20px; 
   
}
.callback img{
    padding-left: 20px;
    cursor: pointer;
}
#userHead >img{
    margin: 32px 0 0;
    border-radius: 50%;
}
/**
*logo_pwd end
**/